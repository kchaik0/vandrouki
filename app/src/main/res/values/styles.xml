<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorDefault</item>
        <item name="colorPrimaryDark">?attr/colorDefault</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorSecondary">?attr/colorDefault</item>

        <item name="colorDivider">@color/color_divider</item>

        <item name="colorDefault">@color/color_default</item>

        <!--Text attrs-->
        <item name="colorLightText">@color/color_light_text</item>
        <item name="colorSecondaryText">@color/color_secondary_text</item>
        <item name="colorDarkText">@color/color_dark_text</item>

        <item name="colorCardNameBg">@color/color_card_name_bg</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

</resources>
